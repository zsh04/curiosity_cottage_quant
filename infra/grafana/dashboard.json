{
  "title": "Mission Control",
  "uid": "mission-control",
  "tags": ["cc_engine", "physics", "risk"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Physics Alpha",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "agent_risk_alpha",
          "legendFormat": "Alpha",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 2.0 },
              { "color": "green", "value": 3.0 }
            ]
          },
          "min": 0,
          "max": 5
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "Risk Approved Size ($)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "agent_risk_approved_size",
          "legendFormat": "Approved Size",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisLabel": "USD",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "off" }
          },
          "unit": "currencyUSD"
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "title": "Engine Logs (System Stream)",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "grafanacloud-logs" },
      "targets": [
        {
          "expr": "{service_name=\"cc_engine\"} |= \"RISK\" or \"EXECUTION\" or \"PHYSICS\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ]
}
