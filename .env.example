# Curiosity Cottage Quant - Environment Configuration
# Copy to .env and fill in your API keys

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENV=DEV  # Set to PROD for production (enables fail-fast guards)
DEBUG=false

# ============================================================================
# FEDERAL RESERVE ECONOMIC DATA (FRED)
# ============================================================================
# Used for fetching current Treasury yields (risk-free rate)
# Get free API key: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=3b351a0ffddbc21ae5917ce384519b6f

# ============================================================================
# MARKET DATA PROVIDERS
# ============================================================================
ALPHAVANTAGE_API_KEY=
FINNHUB_API_KEY=
TWELVEDATA_API_KEY=
MARKETSTACK_API_KEY=
TIINGO_API_KEY=

# ============================================================================
# BROKERAGE (ALPACA)
# ============================================================================
LIVE_TRADING_ENABLED=false
ALPACA_API_KEY=
ALPACA_API_SECRET=
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_FEED=iex

# ============================================================================
# RISK PARAMETERS (Override defaults from app/core/constants.py)
# ============================================================================
MAX_DRAWDOWN_PCT=0.02
MAX_LEVERAGE=1.0
FAT_FINGER_CAP_PCT=0.20

# ============================================================================
# EXECUTION COSTS (Broker-specific)
# ============================================================================
DEFAULT_SLIPPAGE_BPS=0.0005  # 5 bps (conservative)
COMMISSION_PER_SHARE=0.005   # $0.005/share (Alpaca Pro)

# ============================================================================
# STRATEGY PARAMETERS
# ============================================================================
INITIAL_CAPITAL=100000.0
TARGET_ALLOCATION=10000.0
MIN_CONFIDENCE=0.6

# ============================================================================
# SYSTEM
# ============================================================================
HEALTH_CHECK_TIMEOUT=600

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=gemma2:9b
OLLAMA_MODEL=gemma2:9b

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/cc_quant
QUESTDB_URL=http://localhost:9000
QUESTDB_ILP_HOST=localhost
QUESTDB_ILP_PORT=9009

# ============================================================================
# TELEMETRY
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_HEADERS=
IS_DOCKER=false
